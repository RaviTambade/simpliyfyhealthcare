<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-primary border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Vijay Sales</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
               
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                       
                        @Html.ActionLink("SignIn", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white" })
                    </li>
                    <li class="nav-item">

                        @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link text-white" })
                    </li>
                    <li class="nav-item">
                      
                        @Html.ActionLink("Shopping Cart", "ShowCart", "ShoppingCart", new { area = "" }, new { @class = "nav-link text-white" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

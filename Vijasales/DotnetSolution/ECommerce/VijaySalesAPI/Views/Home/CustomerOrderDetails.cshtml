    <!--For CUstomer View-->
    <div class="card w-50">
        <div class="card-header">
            Order #12345
            <h6 class="card-subtitle mb-2 text-muted">06 Dec 2024</h6>
        </div>
        <div class="card-body d-flex justify-content-between">
            <div class="divOrderInfo">
                <h5 class="card-title">Lenevo Thinkpad E16</h5>
                <p class="card-text ">$125.50</p>
                <a href="#" class="btn btn-info text-dark">View Details</a>


@{
    ViewBag.Title = "SalesOrderDetails";
}

<h2>SalesOrderDetails</h2>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details for Salesperson</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .order-card {
            margin-bottom: 20px;
        }

        .order-card-header {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .status-dropdown {
            width: 150px;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h1 class="text-center">Order Details for Salesperson</h1>

        <!-- List of Orders -->
        <div id="ordersList">
            <!-- Example Order Card 1 -->
            <div class="card order-card">
                <div class="card-header order-card-header">
                    Order #12345
                </div>
                <div class="card-body">
                    <p><strong>Customer Name:</strong> John Doe</p>
                    <p><strong>Total:</strong> $200.00</p>
                    <p><strong>Date:</strong> 2023-12-07</p>
                    <p>
                        <strong>Status:</strong>
                        <select class="form-select status-dropdown" id="status12345" onchange="changeStatus(12345)">
                            <option value="pending">Pending</option>
                            <option value="completed">Completed</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </p>
                </div>
            </div>

            <!-- Example Order Card 2 -->
            <div class="card order-card">
                <div class="card-header order-card-header">
                    Order #12346
                </div>
                <div class="card-body">
                    <p><strong>Customer Name:</strong> Jane Smith</p>
                    <p><strong>Total:</strong> $150.00</p>
                    <p><strong>Date:</strong> 2023-12-06</p>
                    <p>
                        <strong>Status:</strong>
                        <select class="form-select status-dropdown" id="status12346" onchange="changeStatus(12346)">
                            <option value="pending">Pending</option>
                            <option value="completed">Completed</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </p>
                </div>
            </div>

            <!-- Add more orders here -->
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

 

</body>
</html>


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>

<ul class="list-unstyled" id="cart-items-list">
</ul>

<div class="text-center mt-3">
    <button class="btn btn-danger" id="clear-cart-btn">Clear Cart</button>
</div>

<script>
    
    let addToCart = (products) => {
        $('#cart-items-list').html('');  

        
        $.each(products, (index, item) => {
            var cardHtml = `
                    <li class="d-flex justify-content-center">
                        <div class="card mb-3 w-75">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <!-- Placeholder image, update it with actual image URL if available -->
                                    <img src="default-image.jpg" class="img-fluid rounded-start" alt="Product Image">
                                </div>
                                <div class="col-md-8 d-flex align-items-center">
                                    <div class="card-body">
                                        <h5 class="card-title">Name: ${item.ProductId}</h5>
                                        <p class="card-text text-secondary">Price: Rs ${item.Price}</p>
                                        <p class="card-text text-secondary">Quantity: ${item.Quantity}</p>

                                        <!-- Quantity Control Buttons -->
                                        <div class="d-flex">
                                            <button class="btn btn-sm btn-info increase-quantity-btn" data-product-id="${item.ProductId}">+</button>
                                            <button class="btn btn-sm btn-warning decrease-quantity-btn" data-product-id="${item.ProductId}">-</button>
                                        </div>

                                        <!-- Remove Product Button -->
                                        <button class="w-25 btn btn-sm btn-danger remove-product-btn" data-product-id="${item.ProductId}">Remove Product</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>`;
           
            $('#cart-items-list').append(cardHtml);
        });
    }

    
    $(document).ready(() => {
        loadCart();  
    });

    
    function loadCart() {
        $.ajax({
            url: "http://localhost:5218/api/shoppingcart",  
            type: "GET",
            success: function (data) {
                addToCart(data);  
            },
            error: function (error) {
                console.error('Error fetching updated cart:', error);
            }
        });
    }

    
    $(document).on('click', '.remove-product-btn', function (e) {
        e.preventDefault();  

        
        var productId = $(this).data('product-id');

        
        $.ajax({
            url: `http://localhost:5218/api/shoppingcart/${productId}`,  
            type: 'DELETE',
            success: function (response) {
                alert('Product removed successfully!');
                loadCart();  
            },
            error: function (error) {
                console.error('Error removing product:', error);
                alert('Error removing product.');
            }
        });
    });

    
    $(document).on('click', '.increase-quantity-btn', function (e) {
        e.preventDefault();  

        var productId = $(this).data('product-id');
        updateQuantity(productId, 1);  
    });

    
    $(document).on('click', '.decrease-quantity-btn', function (e) {
        e.preventDefault();  

        var productId = $(this).data('product-id');
        updateQuantity(productId, -1);  
    });

    
    function updateQuantity(productId, change) {
        $.ajax({
            url: `http://localhost:5218/api/shoppingcart/${productId}`,  
            type: 'PUT',
            data: JSON.stringify({ quantity: change }),
            contentType: 'application/json',
            success: function (response) {
                alert('Quantity updated successfully!');
                loadCart();  
            },
            error: function (error) {
                console.error('Error updating quantity:', error);
                alert('Error updating quantity.');
            }
        });
    }

    
    $('#clear-cart-btn').click(function () {
        $.ajax({
            url: "http://localhost:5218/api/shoppingcart",  
            type: 'DELETE',
            success: function (response) {
                alert('Cart cleared successfully!');
                loadCart();  
            },
            error: function (error) {
                console.error('Error clearing the cart:', error);
                alert('Error clearing the cart.');
            }
        });
    });
</script>

<style>
    .add-to-cart-btn {
        background-color: #007bff !important;
        color: white !important;
        border: none;
    }

        .add-to-cart-btn:hover {
            background-color: #007bff !important;
            color: white !important;
        }

    .view-details-btn {
        background-color: transparent;
        color: #28a745;
        border: 1px solid #28a745;
    }

        .view-details-btn:hover {
            background-color: #28a745;
            color: white;
            border: 1px solid #218838;
        }

    .remove-product-btn {
        background-color: lightskyblue;
        
        color: black;
        border: none;
    }

        .remove-product-btn:hover {
            background-color: #007bff;
            
            
        }

    .increase-quantity-btn:hover {
        margin: 0 5px;
        background-color: dimgrey;
        
    }

    .decrease-quantity-btn:hover {
        margin: 0 5px;
        background-color: dimgrey;
        
    }

    .increase-quantity-btn, .decrease-quantity-btn {
        margin: 0 5px;
        background-color: lightgrey;
    }

    #clear-cart-btn {
        margin-top: 20px;
    }
</style>

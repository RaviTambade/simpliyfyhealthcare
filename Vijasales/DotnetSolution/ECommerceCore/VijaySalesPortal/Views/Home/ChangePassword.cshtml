<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 70vh;">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">Login</h3>
                <form>
                    <table class="table">
                        <tr>
                            <td>Old Password</td>
                            <td><input type="password" name="password" id="UserOldPassword" class="form-control" /> </td>
                        </tr>
                        <tr>
                            <td>New Password</td>
                            <td><input type="password" name="password" id="UserPassword" class="form-control" /></td>
                        </tr>
                       
                        
                        <tr>
                            <td colspan="2" class="text-center">
                                <button type="button" class="btn btn-info" id="ChangeUserPassword" style="margin-top: 20px;">Change Password</button>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
